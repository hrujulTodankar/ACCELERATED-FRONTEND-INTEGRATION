# Multi-Backend Configuration for Content Moderation Dashboard
# This configuration supports both BHIV and InsightBridge backends

# =============================================================================
# BHIV Backend Configuration
# =============================================================================
VITE_BHIV_API_URL=http://localhost:8001
VITE_API_BASE_URL=http://localhost:8001
VITE_BHIV_MCP_URL=http://localhost:8002
VITE_BHIV_WEB_URL=http://localhost:8003

# BHIV Feature Flags
VITE_USE_BHIV_BACKEND=true
VITE_USE_BHIV_ANALYTICS=true
VITE_USE_BHIV_NLP=true
VITE_USE_BHIV_TAGS=true
VITE_ENABLE_BHIV_FALLBACK=true

# BHIV Timeout Configuration (in milliseconds)
VITE_BHIV_TIMEOUT=10000
VITE_BHIV_ANALYTICS_TIMEOUT=5000

# =============================================================================
# InsightBridge Security Backend Configuration
# =============================================================================
VITE_INSIGHTBRIDGE_API_URL=http://localhost:8004
VITE_INSIGHTBRIDGE_WS_URL=ws://localhost:8004/ws

# InsightBridge Feature Flags
VITE_USE_INSIGHTBRIDGE_BACKEND=true
VITE_USE_INSIGHTBRIDGE_SECURITY=true
VITE_USE_INSIGHTBRIDGE_AUDIT=true
VITE_USE_INSIGHTBRIDGE_SIGNATURE=true
VITE_ENABLE_SECURITY_VERIFICATION=true

# InsightBridge Security Features
VITE_ENABLE_RSA_SIGNING=true
VITE_ENABLE_JWT_AUTH=true
VITE_ENABLE_NONCE_PROTECTION=true
VITE_ENABLE_HASHCHAIN_AUDIT=true
VITE_ENABLE_MESSAGE_INTEGRITY=true

# InsightBridge Timeout Configuration (in milliseconds)
VITE_INSIGHTBRIDGE_TIMEOUT=5000
VITE_INSIGHTBRIDGE_SECURITY_TIMEOUT=3000

# =============================================================================
# Multi-Backend Strategy Configuration
# =============================================================================
VITE_BACKEND_STRATEGY=priority-fallback
VITE_PRIMARY_BACKEND=bhiv
VITE_SECONDARY_BACKEND=insightbridge
VITE_ENABLE_BACKEND_HEALTH_CHECKS=true
VITE_HEALTH_CHECK_INTERVAL=30000

# Fallback Strategy
VITE_AUTO_FALLBACK_ENABLED=true
VITE_FALLBACK_ON_ERROR=true
VITE_FALLBACK_TIMEOUT=5000

# Load Balancing
VITE_LOAD_BALANCE_BACKENDS=false
VITE_ROUND_ROBIN_ENABLED=false

# =============================================================================
# Security and Authentication
# =============================================================================
VITE_REQUIRE_SECURITY_VERIFICATION=false
VITE_ENFORCE_SIGNATURE_VALIDATION=false
VITE_AUDIT_ALL_REQUESTS=true
VITE_LOG_SECURITY_EVENTS=true

# JWT Configuration for InsightBridge
VITE_JWT_SECRET_KEY=dev-secret-for-testing
VITE_JWT_EXPIRATION=3600
VITE_JWT_ALGORITHM=HS256

# =============================================================================
# Development and Debugging
# =============================================================================
VITE_DEV_MODE=true
VITE_DEBUG_MULTI_BACKEND=true
VITE_LOG_BACKEND_SWITCHES=true
VITE_USE_MOCK_DATA_WHEN_BACKENDS_UNAVAILABLE=true

# Mock Data Fallback
VITE_MOCK_BHIV_DATA=true
VITE_MOCK_INSIGHTBRIDGE_DATA=true

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_APP_TITLE=Content Moderation Dashboard - Multi-Backend
VITE_SHOW_BACKEND_STATUS=true
VITE_SHOW_SECURITY_INDICATORS=true
VITE_ENABLE_AUDIT_PANEL=true

# UI Features
VITE_ENABLE_BACKEND_SELECTION=true
VITE_ENABLE_SECURITY_DASHBOARD=true
VITE_SHOW_INTEGRATION_STATUS=true

# =============================================================================
# Monitoring and Analytics
# =============================================================================
VITE_ENABLE_BACKEND_METRICS=true
VITE_METRICS_COLLECTION_INTERVAL=60000
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Port Configuration for Services
# =============================================================================
# BHIV Services (already running)
BHIV_API_PORT=8001
BHIV_MCP_PORT=8002
BHIV_WEB_PORT=8003

# InsightBridge Services
INSIGHTBRIDGE_API_PORT=8004
INSIGHTBRIDGE_WS_PORT=8005
INSIGHTBRIDGE_MONITOR_PORT=8006

# =============================================================================
# Feature Toggles for Integration
# =============================================================================
# Enable unified API service
VITE_USE_UNIFIED_API=true

# Enable cross-backend features
VITE_CROSS_BACKEND_ANALYTICS=true
VITE_COMBINED_SECURITY_ANALYTICS=true
VITE_UNIFIED_AUDIT_TRAIL=true

# Content Moderation Integration
VITE_BHIV_MODERATION_PRIORITY=1
VITE_INSIGHTBRIDGE_SECURITY_PRIORITY=2
VITE_AUTO_MODERATION_ENABLED=true
VITE_SECURITY_ENHANCED_MODERATION=true