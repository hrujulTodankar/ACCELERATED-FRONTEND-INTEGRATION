# API base URL for BHIV backend (no trailing slash)
VITE_API_BASE_URL=http://localhost:8001

# Request timeouts (ms)
VITE_BHIV_TIMEOUT=10000
VITE_BHIV_ANALYTICS_TIMEOUT=5000

# When true, frontend will use enhanced mock data if BHIV backend is unavailable (for DEV only)
VITE_USE_MOCK_DATA_WHEN_BHIV_UNAVAILABLE=false

# NOTE: auth token must be stored in localStorage under key 'authToken'
# Example (do NOT commit secrets):
# localStorage.setItem('authToken', 'eyJhbGciOi...')

# BHIV Core base URL (used by scripts and frontend when running local BHIV)
BHIV_BASE_URL=http://localhost:8001

# Toggle to run integration tests/runner against a live BHIV backend
# Set to true to disable axios mocks in tests and allow real HTTP calls
BHIV_INTEGRATION=false
