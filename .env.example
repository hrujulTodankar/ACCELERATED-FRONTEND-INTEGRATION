# API base URLs for backend services (no trailing slash)
VITE_API_BASE_URL=http://localhost:8001      # BHIV Core API
VITE_TAGGING_BASE_URL=http://localhost:8002  # Adaptive Tagging Service
VITE_INSIGHTS_BASE_URL=http://localhost:8003 # InsightBridge Security API

# Request timeouts (ms)
VITE_BHIV_TIMEOUT=10000
VITE_BHIV_ANALYTICS_TIMEOUT=5000
VITE_INSIGHTBRIDGE_TIMEOUT=5000

# When true, frontend will use enhanced mock data if BHIV backend is unavailable (for DEV only)
VITE_USE_MOCK_DATA_WHEN_BHIV_UNAVAILABLE=false

# InsightBridge Security API Feature Flags
# Set to true to enable InsightBridge security features
VITE_USE_INSIGHTBRIDGE_SECURITY=false
VITE_ENABLE_SIGNATURE_VERIFICATION=false
VITE_ENABLE_JWT_AUTHENTICATION=false
VITE_ENABLE_AUDIT_TRAIL=false
VITE_ENABLE_NONCE_PROTECTION=false
# Set to true to require signatures for critical operations (advanced security)
VITE_REQUIRE_SIGNATURE_FOR_CRITICAL_OPS=false

# NOTE: auth token must be stored in localStorage under key 'authToken'
# Example (do NOT commit secrets):
# localStorage.setItem('authToken', 'eyJhbGciOi...')

# BHIV Core base URL (used by scripts and frontend when running local BHIV)
BHIV_BASE_URL=http://localhost:8001

# Toggle to run integration tests/runner against a live BHIV backend
# Set to true to disable axios mocks in tests and allow real HTTP calls
BHIV_INTEGRATION=false
